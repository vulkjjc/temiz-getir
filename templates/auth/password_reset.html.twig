{% extends "main.html.twig" %}

{% block body %}
    <form class="main-box card-box block-middle" action="{{ path("password_reset") }}" method="POST">
        <div class="main-title card-title"> Password Reset </div>

        {% if error.message is defined %}
            <div class="main-error card-error"> {{ error.message }} </div>
        {% endif %}

        <div class="card-cont block-middle">
            <input class="main-input card-input" name="email" placeholder="email" type="email" required>
        </div>

        <button class="main-button card-button" type="submit" name="submit"> Send Token </button>
    </form>
{% endblock %}
